<!-- ファイル選択ボタンとlabelを改行して分けるためdivクラス外にlabelを記載 -->
<label>★プロフィール画像</label>
<div class="form-group">
    <%= form.file_field :new_profile_picture, id: "file" %>
</div>
<br>
<div class="form-group">
    <label>★ID</label>
    <%= form.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
    <label>★パスワード</label>
    <%= form.password_field :password, class: "form-control" %>
</div>

<div class="form-group">
    <label>★パスワード(確認用)</label>
    <%= form.password_field :password_confirmation, class: "form-control" %>
</div>

<br>
<h2 class="text-center">プロフィール情報</h2>

<div class="form-group">
    <label>★フルネーム</label>
    <%= form.text_field :full_name, class: "form-control" %>
</div>
<div class="form-group">
    <label>★生年月日</label>
    <!-- 生年月日で使用するDateクラスをオブジェクト化 -->
    <% d = Date.today %>
    <%= form.date_select :birthday, start_year: d.year-60, end_year: d.year, class: "form-control" %>
</div>
<div class="form-group row">
  <div class="col-sm-2">
    <%= form.label :sex, "★性別", {class: 'form-label'} %>
  </div>
  <div class="col-sm-10 btn-group" data-toggle="buttons">
    <label class="btn btn-outline-secondary active" style="width: 50%">
    <%= form.radio_button :sex, 1, {checked: true} %> 男性
    </label>
    <label class="btn btn-outline-secondary" style="width: 50%">
    <%= form.radio_button :sex, 2, {} %> 女性
    </label>
  </div>
</div>
<div class="form-group">
    <label>★メールアドレス</label>
    <%= form.text_field :email, class: "form-control" %>
</div>

<div class="text-center">
  <%= form.submit "登録", class: "btn btn-primary" %>
</div>
